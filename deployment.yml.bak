apiVersion: apps/v1
kind: Deployment
metadata:
  name: my-app-blue
spec:
  replicas: 2
  selector:
    matchLabels:
      apps: my-app-blue
  template:
    metadata:
      labels:
        apps: my-app-blue
    spec:
      containers:
        - name: my-container
          image: nginx
          ports:
            - containerPort: 80
